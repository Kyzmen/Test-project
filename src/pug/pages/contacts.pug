          <circle cx="100" cy="100" r="100" fill="#23242B"/>
          <circle cx="100" cy="100" r="99.5" stroke="#E5CDB7" stroke-opacity="0.15"/>
          <path d="M62 96L89.6364 124L138 75" stroke="#E5CDB7" stroke-width="2"/>
